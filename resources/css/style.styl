body
  margin: 0
  color: dkr-gray
  // font-size: 16px
  font-weight: 300
  text-shadow: w-ts
  font-family: Roboto, arial, sans-serif;

header
  section
    padding: 16px 20px
    border-top: 2px solid black
    background: lt-green
    border-bottom: 4px solid green;
    span
      col(1/2)
      .logo
        background:url('../../img/logo.png') no-repeat center center
        float: left
        height: 65px
        width: 59px
        +below(tbp)
          background:url('../../img/logo-small.png') no-repeat center center
          height: 50px
          width: 45px
    span.menu
      text-align: right
      padding: 13px 0
      display: none
      +below(tbp)
        display: block
      +below(mbp)
          padding: 14px 0
      a
        color: white
        background: black
        padding: 8px 18px
        border: 2px solid dk-gray
        border-radius: 4px
  nav#menu
    border-top: 4px solid dkr-gray
    background: dk-gray
    text-shadow: b-ts
    width: 100%;
    z-index: 2
    font-size: .8em
    ul
      center(dbp)
      list-style: none
      margin-top: 0
      margin-bottom: 0
      li
        text-align: center
        margin-top: 0
        margin-bottom: 0
        +below(tbp)
          display: none
        a
          span(1/5)
          padding: 16px 0 19px 0
          color: lt-gray
          font-weight: bold
          text-transform: uppercase
          +below(tbp)
            span(1/3)
          +below(mbp)
            span(1/2)
          +below(xmbp)
            stack()
        a:hover
          color: white
        .active
          background: dkr-gray
          color: white
  nav#menu.scrolled
    margin: 0
    position: fixed
    top: 0

// HOME
.main-section
  h1
    margin-top: 10px
    +below(mbp)
      margin-top: 0
  h1,h2
    text-align: center
  div
    margin-top: 40px
    +below(mbp)
      margin-top: 0
  span
    col(1/4)
    shift(3/4)
    text-align: right
    +below(tbp)
      col(1/3)
      shift(2/3)
      text-align: center
    +below(mbp)
      stack()
      unshift()
  p
    font-size: 1.35em
    col(3/4)
    shift(-1/4)
    margin: 0
    +below(tbp)
      col(2/3)
      shift(-1/3)
    +below(mbp)
      stack()
      unshift()
      margin: 10px 0 0 0
.alex
  border-radius: 10px
  +below(mbp)
    max-width: 200px
    margin: 10px 0

// PORTFOLIO
.portfolio
  background: ltrrrr-gray
  div
    margin-top: 20px
    margin-bottom: 30px
    +below(pbp)
      margin-top: 10px
      margin-bottom: 40px
    article
      col(3/5)
      background: ltrr-gray
      padding: 20px
      box-sizing: border-box
      border-radius: 4px
      +below(pbp)
        stack()
    aside
      col(2/5)
      +below(pbp)
        stack()
  span a
    margin: 10px 0
    +below(tbp)
      margin: 0 0 10px 0
  :nth-child(3)
    display: none
  // :last-child
  //   margin-top: 0
  //   margin-bottom: 0

// ABOUT
.about
  background: blue
  border-top: 4px solid ltr-blue
  border-bottom: 4px solid ltr-blue
  color: white
  text-shadow: b-ts
  aside
    margin-top: 15px
    shift(2/3)
    background: dkr-blue
    border-radius: 4px
    col(1/3)
    +below(tbp)
      unshift()
      col(3/3)
      margin: 10px 0 20px 0
    div
      col(1/2, cycle: 2)
      stack()
      +below(tbp)
        unstack()
        padding-top: 10px
    div:last-child
      +below(tbp)
        margin-top: 25px
      +below(xmbp)
        margin-top: 0
  article
    col(2/3)
    shift(-1/3)
    display: table
    text-align: left
    margin: 0 auto
    +below(tbp)
      col(3/3)
      unshift()
  aside > div
    text-align: center
    box-sizing: border-box
    +below(tbp)
      col(1/2)
      text-align: center
    +below(pbp)
      col(1/2, uncycle: 3, cycle: 2)
      text-align: center
    +below(xmbp)
      col(2/2, uncycle: 2)
      text-align: center
      margin: 5px 0
      padding: 0 20px
  article > div
    col(1/2, cycle: 2)
    box-sizing: border-box
    margin: 15px 0
    +below(tbp)
      col(1/3, uncycle: 2, cycle: 3)
    +below(pbp)
      col(1/2, uncycle: 3, cycle: 2)
    +below(xmbp)
      col(2/2, uncycle: 2)
      margin: 5px 0
      padding: 0 20px
      border-bottom: 2px solid dkr-blue
  aside > div > h5, article > div > h5
    color: ltrrr-blue
    text-shadow: b-ts
    text-transform: uppercase
    font-weight: bold
  aside > div > span, article > div > span
    font-weight: bold
    // font-size: 1rem
    // +below(tbp)
    //   font-size: 1rem
    // +below(mbp)
    //   font-size: 1rem
  aside > div ul
    list-style: none
    padding-left: 0
  article > div ul
    list-style: none
    padding-left: 20px
    +below(tbp)
      padding-left: 10px
  aside > div li
    margin: 5px 0
    font-size: .8em
    +below(tbp)
      font-size: 1em
  article > div li
    border-left: 3px solid ltr-blue
    padding-left: 8px
    margin: 5px 0
    font-size: .8em
    +below(tbp)
      font-size: 1em
  article > div a
    // font-weight: bold
    +below(tbp)
      font-weight: normal

