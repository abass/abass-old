body
  margin: 0px
  font-family: arial, sans-sarif

edit()

section
  center (1140px)

header
  border-top: 2px black
  background: light-green
  padding: 20px 0
  div
    center (1140px)
    a
      col(1/5)
    nav
      col(5/10)
